<form autocomplete="off">
    <p class="notes">{{localize "DMS.SpeedConfigHint"}}</p>
    <div class="form-group">
      <label>{{localize "DMS.Speed"}}</label>
      <input name="flags.dms.speed.movement" type="number" step="1" value="{{speed.movement}}"/>
    </div>
    <div class="form-group">
      <label>{{localize "DMS.Maneuverability"}}</label>
      <select class="actor-mnv" name="flags.dms.speed.mnv" data-dtype="Number">
        {{selectOptions config.mnvs selected=speed.mnv}};
      </select>
    </div>
    <button type="submit" name="submit" value="1"><i class="far fa-save"></i> {{ localize "Submit"}}</button>
</form>